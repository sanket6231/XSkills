
<div class="profile-sidebar">
    <!-- SIDEBAR USERPIC -->
    <div class="profile-userpic">
        @if (ViewBag.ImageUrl != null)
        {
            <img src="@Url.Content(ViewBag.ImageUrl)" class="img-responsive" alt="Profile">
        }
        else
        {
            <img src="~/UploadedFiles/Images/profiles/User-blue-icon.png" class="img-responsive" alt="Profile">
        }

    </div>
    <!-- END SIDEBAR USERPIC -->
    <!-- SIDEBAR USER TITLE -->
    <div class="profile-usertitle">
        <div class="profile-usertitle-name">
            @Html.Label((string)ViewBag.username)
        </div>
        @*<div class="profile-usertitle-job">
                Developer
            </div>*@
    </div>
    <!-- END SIDEBAR USER TITLE -->
    <!-- SIDEBAR BUTTONS -->
    <div class="profile-userbuttons">
        @Html.ActionLink("My Profile", "EditProfile", "Home", new { @class = "btn btn-success btn-sm" })
        @*<button type="button" class="btn btn-danger btn-sm">Message</button>*@
    </div>
    <!-- END SIDEBAR BUTTONS -->
    <!-- SIDEBAR MENU -->
    <div class="profile-usermenu">
        <ul class="nav" id="menu_nav">
            <li class="active" id="li_knowlegdehub">
                <a id="btn_knowlegdehub" href="@Url.Action("Index", "KnowledgeHub")">
                    <i class="glyphicon glyphicon-home"></i>
                    Knowledge Hub
                </a>
            </li>
            <li id="li_TeamMembers">
                <a id="btn_TeamMembers" href="@Url.Action("Index", "TeamMembers")">
                    <i class="glyphicon glyphicon-user"></i>
                    Our Team Members
                </a>
            </li>
            <li id="li_ScratchPad">
                <a id="btn_ScratchPad" href="@Url.Action("Index", "ScratchPad")">
                    <i class="glyphicon glyphicon-comment"></i>
                    Scratch Pad
                </a>
            </li>
            <li id="li_rateus">
                <a id="btn_rateus" href="@Url.Action("RateUs", "Home")">
                    <i class="glyphicon glyphicon-ok"></i>
                    Rate Us
                </a>
            </li>
            @*<li>
                    <a href="#">
                        <i class="glyphicon glyphicon-flag"></i>
                        Help
                    </a>
                </li>*@
        </ul>
    </div>
    <!-- END MENU -->
</div>
<input type="hidden" id="hdn_pagename" data-value="@ViewBag.Page" />
<script>
    $('#menu_nav').find('li.active').removeClass('active');
    var pagename = $("#hdn_pagename").data("value");
    switch (pagename) {
        case "Knowledge Hub":
            $('#li_knowlegdehub').addClass('active');
            break;
        case "Team Members":
            $('#li_TeamMembers').addClass('active');
            break;
        case "Scratch Pad":
            $('#li_ScratchPad').addClass('active');
            break;
        case "Rate Us":
            $('#li_rateus').addClass('active');
            break;
        default:
            $('#li_knowlegdehub').addClass('active');
            break;
    }
    //$('.profile-usermenu .nav a').on('click', function () {
    //    $('.profile-usermenu .nav').find('li.active').removeClass( 'active' );
    //        $( this ).parent( 'li' ).addClass( 'active' );
    //});
</script> 